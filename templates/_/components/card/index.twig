{% import "/_/macros/gtm" as gtm %}

<article class="bg-white relative group hover:bg-gray-200">
    <div class="p-4">
        <header>
            <h3>
                <a href="/{{ card.uri }}"
                   class="font-bold no-underline

					{# This gives us just one link per card (good for SEO), but it covers the whole card #}
                    after:content-[''] after:absolute after:inset-0

                    hover:text-red-600 hover:underline
                "

                   onclick="{{ gtm.uiEvent("card", "click", card.title) }}"

                >{{ card.title }}</a></h3>
        </header>
        <section>
            <p>{{ card.excerpt }}</p>
        </section>
    </div>
</article>

